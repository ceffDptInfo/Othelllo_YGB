<Window x:Class="Reversi_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reversi_WPF"
        mc:Ignorable="d"
        Title="Reversi" Height="350" Width="320" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0" Background="LightGray">
            <Button Click="RestartGame_Click">Restart</Button>
            <Button Click="QuitGame_Click">Quit</Button>
            <Label x:Name="currentPlayerLabel" Content="White's Turn" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </ToolBar>
        <Grid x:Name="grdMain" Grid.Row="1">

        </Grid>
    </Grid>
</Window>
